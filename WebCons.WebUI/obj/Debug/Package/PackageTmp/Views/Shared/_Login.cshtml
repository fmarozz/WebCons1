@{
    Layout = null;
}
@using WebCons.WebUI.Utils
@model WebCons.WebUI.Models.MainModel
<div class="masterMainContainer layoutLogin" id="boxLogin">
    <!-- Contenitore pagina -->
    <div class="wrapper">
        <!-- Titolo della pagina -->
        <div style="padding-bottom: 4px;">
            <span id="titoloPagina">Login</span>
        </div>
        <!-- Separatore Intestazione da Corpo -->
        <hr class="rigaHeader" />
        <!-- Corpo della pagina -->
        <div class="masterBodyRendered">
            <table cellpadding="0" cellspacing="0">
                <tr style="height: 20px;">
                </tr>
                <tr>
                    <td width="20">
                    </td>
                    <td width="100">
                        Username:
                    </td>
                    <td>
                        <input type="text" id="username" name="username" class="k-textbox" placeholder="Inserisci la tua email Aubay"
                            autocomplete="off" style="width: 220px;" />
                    </td>
                </tr>
                <tr style="height: 30px;">
                </tr>
                <tr>
                    <td width="20">
                    </td>
                    <td width="100">
                        Password:
                    </td>
                    <td>
                        <input type="password" id="password" name="password" class="k-textbox" placeholder="Inserisci la tua password"
                            style="width: 220px;" />
                    </td>
                </tr>
                @{
                    if (Model.UserOrPasswordIncorrect)
                    {
                        <tr style="height: 10px;">
                        </tr>
                        <tr>
                            <td width="20">
                            </td>
                            <td width="100">
                            </td>
                            <td>
                                <span class="msgGenerico">Username e/o Password errati.</span>
                            </td>
                        </tr>
                        <tr style="height: 10px;">
                        </tr>
                    }
                    else
                    {
                        <tr style="height: 30px;">
                        </tr>
                    }
                }
                <tr>
                    <td width="20">
                    </td>
                    <td width="100">
                    </td>
                    <td>
                        <a href="javascript:logga();" class="genericBtn" type="submit" id="btnEntra">Entra</a>
                    </td>
                </tr>
            </table>
        </div>
        <!-- Separatore Corpo da Footer -->
        <hr class="rigaFooter" />
    </div>
</div>
